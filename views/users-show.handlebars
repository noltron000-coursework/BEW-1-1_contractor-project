<!-- users-show.handlebars -->


<div class="row">
	<div class="col-sm-4">
		<img class="img-responsive" src="{{user.userAvatar}}" />
	</div>

	<div class="col-sm-8">
		<h1>{{user.userName}}</h1>
		<p class="lead">{{user.userBio}}</p>
	</div>
</div>
<div class="row">
	<div>
		<a href="/users/{{user.userId}}/articles/new" class="btn btn-primary">Write Article</a>
		<a href="" class="btn">Delete User</a>
</div>
<div class="row">
	<div class="col-sm-12">
		<h3>Articles</h3>
		{{#each articles}}
			{{> article}}
		{{/each}}
	</div>
</div>