<!-- views/articles-edit.handlebars -->

<div class="row">
	<div class="col-sm-6 col-sm-offset-3">
		<form method="POST" action="/users/{{article.userId}}/articles/{{article._id}}?_method=PUT">
			<fieldset>
				<legend>Edit Article</legend>
				{{> articles-form}}
			</fieldset>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Save Article</button>
				<button type="button" onclick="window.location.href='/users/{{article.userId}}'">Cancel</button>
			</div>
		</form>
	</div>
</div>
